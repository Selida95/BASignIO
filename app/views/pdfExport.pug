doctype html
html
  head
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/css/export.css')
    title= title

  body
    .header
      include ../public/img/logo.svg
      h1=title
      if register.length > 0
        - var yearSeven = false;
        - var yearEight = false;
        - var yearNine = false;
        - var yearTen = false;
        - var yearEleven = false;
        - var yearTwelve = false;
        - var yearThirteen = false;
        - var staff = false;
        each item in register
          if item.type == "student" && item.yearGroup == 7
            - yearSeven = true;
          if item.type == "student" && item.yearGroup == 8
            - yearEight = true;
          if item.type == "student" && item.yearGroup == 9
            - yearNine = true;
          if item.type == "student" && item.yearGroup == 10
            - yearTen = true;
          if item.type == "student" && item.yearGroup == 11
            - yearEleven = true;
          if item.type == "student" && item.yearGroup == 12
            - yearTwelve = true;
          if item.type == "student" && item.yearGroup == 13
            - yearThirteen = true;
          if item.type == "staff"
            - staff = true;
            
        if yearSeven
          h2
            | Year 7
          table
            tr
              th
                | Forenames
              th
                | Surname
              th
                | Location
              th
                | Time In
              th
                | Time Out
            each student in register
              if student.type == "student" && student.yearGroup == 7
